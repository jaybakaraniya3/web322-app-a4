<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr>
        {{#if data.items}}
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data.items}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.postDate}}</td>
                        <td>{{this.price}}</td>
                        <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
                        <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="col-md-12 text-center">
            <strong>{{data.message}}</strong>
        </div>
        {{/if}}
    </div>
</div>